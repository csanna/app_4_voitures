{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block monTitre %}Connexion{% endblock %}

{% block body %}
{% if error %}
    <div class="alert alert-danger">
        Le nom d'utilisateur et le mot de passe ne sont pas bon.
    </div>
{% endif %}
<form action="{{path('login')}}" method="post">
    <div class="form-group">
        <label>Nom d'utilisateur : </label>
        <input type="text" required name="_username" class="form-control">
    </div>
    <div class="form-group">
        <label>Mot de passe : </label>
        <input type="password" required name="_password" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="S'identifier">
</form>    
{% endblock %}
